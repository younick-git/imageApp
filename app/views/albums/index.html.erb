<h2>Create your Album</h2>
<%= simple_form_for :album, url: albums_path, method: :create do |f| %>
  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Create Album" %>
  </div>
<% end %>
<div class="optimiser pull-left">
  <h2>Total Albums: <%= @total_albums.count %></h2>
  <% if @total_albums.count > 0 %>
    <div class="row">
      <div class="col-md-10" id="picture_panel">
        <%= render partial: "albums/component_partials/album", locals:{total_albums: @total_albums}%>
      </div>
    </div>
  <% end %>
</div>

<div class="optimiser pull-left">
  <h2>Your Albums: <%= @albums.count %></h2>
  <% if @albums.count > 0 %>
    <div class="row">
      <div class="col-md-10" id="picture_panel">
        <%= render partial: "albums/component_partials/album", locals:{total_albums: @albums}%>
      </div>
    </div>
  <% end %>
</div>
